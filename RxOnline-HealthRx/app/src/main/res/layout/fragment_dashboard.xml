<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Header"
        style="@style/rel.Top_part">

        <TextView
            style="@style/Header.Left_text"
            android:text="Hello" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/Main"
        style="@style/rel.Mid_part">


        <LinearLayout
            android:id="@+id/dashwidg_quicktools"
            style="@style/form_Multi.con">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick tools"></TextView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"></Space>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/icon_upload"
                    style="@style/icon.con">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ico_upload"/>
                    <TextView
                        style="@style/icon_text.con"
                        android:text="Update"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_firstaid"
                    style="@style/icon.con">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ico_boxplus"/>
                    <TextView
                        style="@style/icon_text.con"
                        android:text="First Aid"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>

