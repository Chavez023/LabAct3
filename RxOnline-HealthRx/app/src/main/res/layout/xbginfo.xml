<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Header"
        style="@style/rel.Top_part">

        <TextView
            android:id="@+id/textView"
            style="@style/Header.Center_text"
            android:text="Sign In" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Header"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            style="@style/step_true.text"
            android:text="1" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#720000" />

        <TextView
            style="@style/step_true.text"
            android:text="2" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#720000" />

        <TextView
            style="@style/step_true.text"
            android:text="3" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#720000" />

        <TextView
            style="@style/step_true.text"
            android:text="4" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#BBBBBB" />

        <TextView
            style="@style/step_false.text"
            android:text="5" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/Main"
        style="@style/rel.Mid_part"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@+id/status"
        tools:ignore="ExtraText">

        <LinearLayout
            android:id="@+id/holder"
            style="@style/sv.holder_Vertical.con">

            <LinearLayout
                android:id="@+id/form"
                style="@style/form_Single.con">

                <TextView
                    style="@style/Header.Center_text"
                    android:text="User Background" />

                <TextView
                    style="@style/Description.Center_text"
                    android:text="Fill-up the corresponding items" />
            </LinearLayout>

        </LinearLayout>`

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        style="@style/rel.Bot.Nav_part">

        <LinearLayout
            android:id="@+id/Backpage"
            style="@style/iset_Nav_items_H">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ico_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Back" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/Nextpage"
            style="@style/iset_Nav_items_H">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Next" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ico_arrow_right" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
